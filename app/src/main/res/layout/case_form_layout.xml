<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="INFORMASI PELAPOR"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    app:animationDuration="200"
                    app:borderColor="@color/colorPrimary"
                    app:borderWidth="2dp"
                    app:cornerRadius="0dp">

                    <EditText
                        android:id="@+id/et_nomor_lp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="No. LP"
                        android:singleLine="true" />

                </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="16dp"
                    app:animationDuration="200"
                    app:borderColor="@color/colorPrimary"
                    app:borderWidth="2dp"
                    app:cornerRadius="0dp">

                    <EditText
                        android:id="@+id/et_nama_pelapor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Pelapor"
                        android:singleLine="true" />

                </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="16dp"
                    app:animationDuration="200"
                    app:borderColor="@color/colorPrimary"
                    app:borderWidth="2dp"
                    app:cornerRadius="0dp">

                    <EditText
                        android:id="@+id/et_hp_pelapor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nomor HP Pelapor"
                        android:inputType="phone"
                        android:singleLine="true" />

                </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="16dp"
                    app:animationDuration="200"
                    app:borderColor="@color/colorPrimary"
                    app:borderWidth="2dp"
                    app:cornerRadius="0dp">

                    <EditText
                        android:id="@+id/et_alamat_pelapor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alamat Pelapor"
                        android:singleLine="true" />

                </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="INFORMASI KEJADIAN"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                    android:id="@+id/til_waktu_kejadian"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="16dp"
                    app:animationDuration="200"
                    app:borderColor="@color/colorPrimary"
                    app:borderWidth="2dp"
                    app:cornerRadius="0dp">

                    <EditText
                        android:id="@+id/et_waktu_kejadian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:editable="false"
                        android:hint="Waktu Kejadian"
                        android:singleLine="true" />

                </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:padding="16dp"
                        app:animationDuration="200"
                        app:borderColor="@color/colorPrimary"
                        app:borderWidth="2dp"
                        app:cornerRadius="0dp">

                        <EditText
                            android:id="@+id/et_lokasi_kejadian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Lokasi Kejadian"
                            android:singleLine="true" />

                    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                    <ImageButton
                        android:id="@+id/ib_select_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white"
                        android:foregroundTint="@color/colorPrimary"
                        android:src="@drawable/ic_add_location_black_24dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/operator_spinner"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:layout_width="150dp"
                        android:layout_height="match_parent" />

                    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:padding="16dp"
                        app:animationDuration="200"
                        app:borderColor="@color/colorPrimary"
                        app:borderWidth="2dp"
                        app:cornerRadius="0dp">

                        <EditText
                            android:id="@+id/et_lac_cid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="No. CID"
                            android:inputType="number"
                            android:singleLine="true" />

                    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                </LinearLayout>

                <Spinner
                    android:id="@+id/pidana_spinner"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp" />

                <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                    android:id="@+id/til_pidana_lain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="16dp"
                    android:visibility="gone"
                    app:animationDuration="200"
                    app:borderColor="@color/colorPrimary"
                    app:borderWidth="2dp"
                    app:cornerRadius="0dp">

                    <EditText
                        android:id="@+id/et_pidana_lain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Jenis Pidana"
                        android:singleLine="true" />

                </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="SAKSI"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_saksi_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_saksi_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Saksi 1"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_saksi_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_saksi_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Saksi 2"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_saksi_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_saksi_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Saksi 3"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_saksi_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_saksi_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Saksi 4"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_saksi_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_saksi_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Saksi 5"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/ib_add_saksi"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:text="Tambah saksi"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:drawableTint="@color/colorAccent"
                    android:textColor="@color/colorAccent"
                    android:drawableStart="@drawable/ic_add_black_24dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="HASIL LIDIK"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_hasil_lidik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_hasil_lidik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:hint="Hasil Lidik"
                        android:inputType="textMultiLine"
                        android:lines="6" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</LinearLayout>